VERSION 0.7

# build - generate a wasm component from a C file
build:
    FROM github.com/input-output-hk/catalyst-ci/earthly/wasm/c:feat/wasm-c-world-flag+wasm-c-base

    COPY ./my-component.c .
    COPY ..+wasi-src/wasi .

    RUN /scripts/std_build.py --wit_path="wit" --c_files="my-component.c" --out="component.wasm" --world="hermes-stub"

    SAVE ARTIFACT component.wasm AS LOCAL component.wasm
