/// Interface HTTP Gateway
///
/// ## Permissions
///
/// This API is ALWAYS available.


/// Logging API Interface
interface event {

    use hermes:binary/api.{bstr};

    type header = tuple<string, list<string>>;
    type headers = list<header>;

    record http-response{
        code: u16,
        headers: headers,
        body: bstr
    }

    reply: func(body: bstr, headers: headers, path: string, method: string) -> option<http-response>;    
}